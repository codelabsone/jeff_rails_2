<%= form_for(@vehicles) do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name, autofocus: true %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.label :cartype %><br/>
    <%= f.text_field :cartype %>
  </p>
  <p>
    <%= f.label :year %><br/>
    <%= f.date_select :year, start_year: Date.today.year - 20, end_year: Date.today.year + 2 %>
  </p>
  <p>
    <%= f.label :price %><br/>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.submit %>
    <% link_to "Cancel", vehicles_path %>
  </p>
<% end %>